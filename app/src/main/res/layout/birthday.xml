<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:background="@drawable/press"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/birthday_frame"
            android:layout_width="40dp"
            android:layout_height="60dp">
            <com.firstapp.steven.mishu.EditDay.MyButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"

                android:id="@+id/birthday_delete_button"/>
        </FrameLayout>
<FrameLayout
    android:layout_width="60dp"
    android:layout_height="60dp">
    <com.firstapp.steven.mishu.UserIcon
        android:layout_width="50dp"
        android:layout_height="50dp"
android:layout_gravity="center"
        android:scaleType="fitCenter"

        android:id="@+id/birthday_icon"/>
</FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日管家"
            android:textSize="18dp"

            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:id="@+id/birthday_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年8月21"
            android:id="@+id/birthday_date"
            android:textSize="14dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="46"
            android:id="@+id/day_num"
            android:textSize="25dp"
            android:gravity="left"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:textSize="18dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/holo_red_dark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后过生日"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/day_num"
            android:id="@+id/birthday_content"/>
    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
</LinearLayout>