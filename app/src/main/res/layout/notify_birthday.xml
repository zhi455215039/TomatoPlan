<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:id="@+id/birthday_notify_root">
    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|start"
            android:scaleType="fitCenter"
            android:src="@drawable/action_no"
            android:id="@+id/birthday_notify_icon"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日管家"
            android:textSize="18dp"

            android:paddingTop="14dp"
            android:textColor="@android:color/black"
            android:id="@+id/birthday_notify_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年8月21"
            android:id="@+id/birthday_notify_date"
            android:textSize="14dp"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="46"
            android:id="@+id/day_notify_num"
            android:textSize="25dp"
            android:gravity="left"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:textSize="18dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/holo_red_dark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后过生日"
            android:layout_alignParentRight="true"
            android:layout_marginTop="42dp"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/day_num"
            android:id="@+id/birthday_notify_content"/>
    </RelativeLayout>
</LinearLayout>